{
	"compilerOptions": {
		"strict": true,
		"target": "ES2022",
		"module": "Node16",
		"moduleResolution": "Node16",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noUncheckedIndexedAccess": true,
		"declaration": true,
		"isolatedDeclarations": true,
		"verbatimModuleSyntax": true,
		"rewriteRelativeImportExtensions": true,
		"noEmit": true
	},
	"include": ["src", "tests/**/*.test.js"]
}
